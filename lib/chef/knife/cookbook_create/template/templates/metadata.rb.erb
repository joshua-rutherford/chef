name             '<%= cookbook_name %>'
maintainer       '<%= copyright %>'
maintainer_email '<%= email %>'
<% case license
   when 'apachev2' -%>
license          'Apache 2.0'
<% when 'gplv2' -%>
license          'GNU Public License 2.0'
<% when 'gplv3' -%>
license          'GNU Public License 3.0'
<% when 'mit' -%>
license          'MIT'
<% when 'none' -%>
license          'All rights reserved'
<% end -%>
description      'Installs/Configures <%= cookbook_name %>'
long_description IO.read(File.join(File.dirname(__FILE__), 'README.<%= readme_format %>'))
version          '0.1.0'
